<Window x:Class="QuantStudio.Shell.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QuantStudio.Shell"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Margin="10">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width="5*"/>
            <ColumnDefinition Width="6*" />
        </Grid.ColumnDefinitions>

        <Label Grid.ColumnSpan="2">Names</Label>
        <ListBox x:Name="lstNames" Grid.ColumnSpan="2" Margin="0,25,0,0" Grid.RowSpan="2" />

        <StackPanel Grid.Column="2" Margin="5,25,0,0" Grid.RowSpan="2">
            <TextBox x:Name="txtName" KeyDown="txtName_KeyDown"></TextBox>
            <Button x:Name="btnAdd" Margin="0,5,0,0" Click="ButtonAddName_Click">AddName</Button>
            <Button x:Name="btnAddOk" Margin="0,5,0,0" Click="LoadCsvFiles_Click">LoadCsvFiles
            </Button>
        </StackPanel>
    </Grid>
</Window>
